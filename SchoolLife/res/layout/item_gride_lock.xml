<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout 
            android:id="@+id/rl_app1"
            xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
    <ImageView 
        android:layout_marginTop="5dp"
        android:id="@+id/iv_app_icon1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:focusable="false"
        android:src="@drawable/ic_qq_to_ganji"
        />
    <CheckBox
        android:id="@+id/cb_app_check1"
        android:layout_width="wrap_content"
        android:layout_height="20dp" 
        android:layout_alignRight="@id/iv_app_icon1"
        android:layout_alignBottom="@id/iv_app_icon1"
        />
    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/tv_app_name1"
        android:layout_below="@id/iv_app_icon1" 
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLines="1"
        android:text="qq"
        />
    </RelativeLayout>
