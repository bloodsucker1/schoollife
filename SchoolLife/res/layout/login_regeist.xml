<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/rootView" 
    android:background="#ffffff" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:id="@+id/titlebar" 
        android:layout_width="fill_parent" 
        android:layout_height="25dp">
        <ImageView 
            android:id="@+id/left_image_btn" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="8.0dip" 
            android:src="@drawable/x_close_normal"
            android:scaleType="center" 
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <TextView android:textSize="16.0dip" 
            android:textColor="#9e9e9e" 
            android:onClick="onCall"
            android:clickable="true"
            android:id="@+id/right_image_btn" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="8.0dip" 
            android:text="用户名登录" 
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/titlebar">
            <RelativeLayout 
                android:id="@+id/phone_quick_login" 
                android:visibility="visible" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
				android:layout_marginBottom="30.0dip" 
				android:minHeight="320.0dip" 
				android:gravity="center">
				<TextView 
				    android:id="@+id/tv_phone"
				    android:layout_width="250dp"
				    android:layout_height="wrap_content"
				    android:text="手机登录"
				    android:textSize="25sp"
				    android:gravity="center_horizontal"
				    />
				<EditText 
				    android:layout_marginTop="25dp"
				    android:id="@+id/et_phone_num"
				    android:layout_below="@id/tv_phone"
				    android:layout_width="250dp"
				    android:layout_height="wrap_content"
				    android:hint="手机号码"/>
				<EditText 
				    android:layout_marginTop="15dp"
				    android:id="@+id/et_phone_password"
				    android:layout_width="250dp"
				    android:visibility="gone"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/et_phone_num"
				    android:hint="密码"
				    />
				<EditText 
				    android:layout_marginTop="15dp"
				    android:id="@+id/et_phone_verify"
				    android:layout_width="250dp"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/et_phone_password"
				    android:hint="验证码"/>
				    
				<Button
				    android:id="@+id/btn_get_verify"
				    android:layout_width="80dp"
				    android:layout_height="25dp"
				    android:layout_alignBottom="@id/et_phone_verify"
				    android:layout_alignRight="@id/et_phone_verify"
				    android:layout_marginBottom="10dp"
				    android:text="获取验证码"
				    android:background="@drawable/bg_btn_person_info"
				    android:textSize="10dp" />
				<Button 
				    android:layout_marginTop="25dp"
				    android:id="@+id/btn_phone"
				    android:layout_below="@id/et_phone_verify"
				    android:layout_width="250dp"
				    android:layout_height="40dp"
				    android:background="@drawable/bg_btn_person_info"
				    android:text="登录"
				    />

			</RelativeLayout>
            <RelativeLayout 
                android:id="@+id/phone_quick_regest" 
                android:visibility="gone" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
				android:layout_marginBottom="30.0dip" 
				android:minHeight="320.0dip" />
            <LinearLayout 
                android:gravity="center" 
                android:orientation="horizontal"
                android:id="@+id/third_tip" 
                android:paddingLeft="18.0dip" 
                android:paddingRight="18.0dip" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content">
                <View 
                    android:background="#ffd8d8d8" 
                    android:layout_width="0.0dip" 
                    android:layout_height="1.0px" 
                    android:layout_weight="1.0" />
                <TextView 
                    android:textSize="14.0dip" 
                    android:textColor="#9e9e9e" 
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="第三方登录账号" />
                <View 
                    android:background="#ffd8d8d8" 
                    android:layout_width="0.0dip" 
                    android:layout_height="1.0px" 
                    android:layout_weight="1.0" />
            </LinearLayout>
            <LinearLayout 
                android:orientation="horizontal" 
                android:id="@+id/login_third" 
                android:paddingLeft="40.0dip" 
                android:paddingRight="40.0dip" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="20.0dip" 
                android:layout_marginBottom="20.0dip">
                <LinearLayout 
                    android:gravity="center" 
                    android:orientation="vertical" 
                    android:id="@+id/qq_login_id" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0">
                    <ImageView 
                        android:layout_width="48.0dip" 
                        android:layout_height="48.0dip" 
                        android:layout_marginBottom="8.0dip" 
                        android:src="@drawable/ic_qq_to_ganji" />
                    <TextView 
                        android:textSize="14.0dip" 
                        android:textColor="#9e9e9e" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="QQ登录" />
                </LinearLayout>
                <LinearLayout 
                    android:gravity="center" 
                    android:orientation="vertical" 
                    android:id="@+id/sina_login_id" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0">
                    <ImageView 
                        android:layout_width="48.0dip" 
                        android:layout_height="48.0dip" 
                        android:layout_marginBottom="8.0dip" 
                        android:src="@drawable/icon_sina" />
                    <TextView 
                        android:textSize="14.0dip" 
                        android:textColor="#9e9e9e" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="微博登录" />
                </LinearLayout>
            </LinearLayout>
            <TextView 
                android:textSize="16.0dip" 
                android:textColor="#9e9e9e" 
                android:gravity="center" 
                android:onClick="onCall"
                android:clickable="true"
                android:id="@+id/zhuce" 
                android:background="@drawable/bg_tab" 
                android:layout_width="fill_parent" 
                android:layout_height="48.0dip" 
                android:text="注册" 
                android:layout_alignParentBottom="true" />
        </LinearLayout>
</RelativeLayout>